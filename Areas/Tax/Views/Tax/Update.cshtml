@model TaxViewModel

<h1>Create Tax</h1>

<form method="POST" asp-area="Tax" asp-controller="Tax" asp-action="Update">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <label asp-for="Code"></label>
        <input asp-for="Code">
        <span asp-validation-for="Code"></span>

    <div>
        <label asp-for="Rate"></label>
        <input asp-for="Rate">
        <span asp-validation-for="Rate"></span>
    </div>


    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description">
        <span asp-validation-for="Description"></span>
    </div>

    <div>
        <label asp-for="IsActive"></label>
        <input asp-for="IsActive">
        <span asp-validation-for="IsActive"></span>
    </div>

    <div>
        <label asp-for="IsDefault"></label>
        <input asp-for="IsDefault">
        <span asp-validation-for="IsDefault"></span>
    </div>


    <button type="submit">Cập nhật thuế</button>
</form>


